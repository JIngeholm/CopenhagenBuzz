<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_3dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_marginTop="@dimen/_5dp"
        app:cardCornerRadius="@dimen/_16dp"
        app:cardElevation="@dimen/_4dp"
        app:strokeColor="?attr/colorOnBackground"
        app:strokeWidth="@dimen/_1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Inner ConstraintLayout for Event Details -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Circle with Letter -->
            <FrameLayout
                android:id="@+id/circle"
                android:layout_width="@dimen/_55dp"
                android:layout_height="@dimen/_55dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="?attr/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp">

                <TextView
                    android:id="@+id/circle_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/e"
                    android:textSize="@dimen/_18sp"
                    android:textColor="?attr/colorOnSecondary"
                    android:fontFamily="sans-serif-medium"/>
            </FrameLayout>

            <!-- Event Name and Type -->
            <LinearLayout
                android:id="@+id/event_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/circle"
                app:layout_constraintEnd_toStartOf="@id/like">

                <!-- Event Name -->
                <TextView
                    android:id="@+id/event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_name"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginBottom="@dimen/_4dp"/>

                <!-- Event Type -->
                <TextView
                    android:id="@+id/event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_type"
                    android:textSize="@dimen/_14sp"
                    android:layout_marginTop="@dimen/_4dp"/>
            </LinearLayout>

            <!-- Like Button -->
            <Button
                android:id="@+id/like"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/baseline_favorite_border_24"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginEnd="@dimen/_16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/event_photo"
                app:layout_constraintBottom_toBottomOf="@id/event_info"/>

            <!-- Event Photo -->
            <ImageView
                android:id="@+id/event_photo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/event_photo_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/invited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                android:minWidth="64dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:backgroundTint="?attr/colorAccent"
                android:text="@string/x_invited"
                android:textSize="12sp"
                android:drawablePadding="2dp"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_8dp"
                app:icon="@drawable/guest_24"
                app:iconSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_info"
                />

            <!-- Event Location -->
            <TextView
                android:id="@+id/event_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/event_location"
                android:textSize="@dimen/_16sp"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_8dp"
                app:layout_constraintTop_toBottomOf="@id/invited"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/event_photo"/>

            <!-- Event Date -->
            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_date"
                android:textSize="@dimen/_12sp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_2dp"
                app:layout_constraintTop_toBottomOf="@id/event_location"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Event Description -->
            <TextView
                android:id="@+id/event_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/event_description"
                android:textSize="@dimen/_14sp"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_15dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/event_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/event_photo"/>

            <!-- Buttons Anchored to the Right -->
            <LinearLayout
                android:id="@+id/mod_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_8dp"
                android:padding="@dimen/_10dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/event_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/event_photo">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/invite_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="?attr/colorAccent"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:focusable="false"
                    app:strokeColor="?attr/colorAccent"
                    app:strokeWidth="@dimen/thin_outline" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:backgroundTint="@android:color/transparent"
                    app:strokeColor="?attr/colorAccent"
                    app:strokeWidth="@dimen/thin_outline"
                    android:textColor="?attr/colorAccent"
                    android:layout_marginEnd="@dimen/_8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/colorAccent"
                    android:text="@string/delete"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>