<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_3dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_marginTop="@dimen/_5dp"
        app:cardCornerRadius="@dimen/_16dp"
        app:cardElevation="@dimen/_4dp"
        app:strokeColor="?attr/colorOnBackground"
        app:strokeWidth="@dimen/_1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Inner Layout for Event Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Horizontal Layout for Event Name, Type, and Circle -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16dp">

                <!-- Circle with Letter -->
                <FrameLayout
                    android:id="@+id/circle"
                    android:layout_width="@dimen/_55dp"
                    android:layout_height="@dimen/_55dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="?attr/colorAccent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/circle_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/e"
                        android:textSize="@dimen/_18sp"
                        android:textColor="?attr/colorOnSecondary"
                        android:fontFamily="sans-serif-medium"/>
                </FrameLayout>

                <!-- Vertical Layout for Event Name and Type -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    app:layout_constraintStart_toEndOf="@id/circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/like">

                    <!-- Event Name -->
                    <TextView
                        android:id="@+id/event_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_name"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_4dp"
                        android:layout_marginBottom="@dimen/_4dp"/>

                    <!-- Event Type -->
                    <TextView
                        android:id="@+id/event_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_type"
                        android:textSize="@dimen/_14sp"
                        android:layout_marginTop="@dimen/_4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/like"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:background="@drawable/baseline_favorite_border_24"
                    android:backgroundTint="?attr/colorPrimary"
                    android:layout_marginStart="@dimen/_3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Event Photo -->
            <ImageView
                android:id="@+id/event_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/event_photo_placeholder"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginBottom="@dimen/_8dp"/>

            <!-- Event Location -->
            <TextView
                android:id="@+id/event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_location"
                android:textSize="@dimen/_16sp"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginStart="@dimen/_15dp"
                />

            <!-- Event Date -->
            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_date"
                android:textSize="@dimen/_12sp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_2dp"
                />

            <!-- Event Description -->
            <TextView
                android:id="@+id/event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_description"
                android:textSize="@dimen/_12sp"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:padding="@dimen/_1dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Buttons Anchored to the Right -->
            <LinearLayout
                android:id="@+id/mod_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_8dp"
                android:padding="@dimen/_10dp">

                <!-- Spacer to push buttons to the right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:backgroundTint="@android:color/transparent"
                    app:strokeColor="?attr/colorAccent"
                    app:strokeWidth="@dimen/thin_outline"
                    android:textColor="?attr/colorAccent"
                    android:layout_marginEnd="@dimen/_8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/colorAccent"
                    android:text="@string/delete" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
