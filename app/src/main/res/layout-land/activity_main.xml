<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <include
                android:id="@+id/content_main"
                layout="@layout/content_main"
                app:layout_constraintStart_toEndOf="@id/navigation_rail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

            <com.google.android.material.navigationrail.NavigationRailView
                android:id="@+id/navigation_rail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:itemPaddingTop="@dimen/_7dp"
                app:labelVisibilityMode="selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/side_navigation_menu"
                />

            <ImageButton
                android:id="@+id/login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/guest_24"
                android:background="@android:color/transparent"
                android:contentDescription="@string/login"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/_30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/navigation_rail"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/login_24"
                android:background="@android:color/transparent"
                android:contentDescription="@string/logout"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/navigation_rail"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>
